{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
    }
    ,
      "fullName": {
          "type": "string",
          "minLength": 3,
          "maxLength": 50
      },
      "email": {
        "type": "string"
      },
      "password": {
        "type": "string",
        "minLength": 5,
        "maxLength": 20
      },
      "is_admin": {
          "type": "boolean",
          "default": "false"
      },
      "is_seller": {
          "type": "boolean",
          "default": false
      }
  },
    "additionalProperties": false,
    "required": [
      "username",
      "fullName",
      "email",
      "password"
    ]
  }
  
