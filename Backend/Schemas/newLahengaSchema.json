{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "seller_username": {
        "type": "string"
        }
        ,
        "name": {
            "type": "string",
            "minLength": 5,
            "maxLength": 50
        },
        "material": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
        },
        "description": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100
        },
        "price": {
            "type":"string",
            "minLength": 2,
            "maxLength": 10
        },
        "sale_price": {
            "type": "string"
        },
        "color": {
            "type": "string",
            "minLength": 3,
            "maxLength": 10
        },
        "quantity": {
            "type": "string",
            "minLength": 1,
            "maxLength": 3
        },
        "image": {
            "type": "string",
            "minLength": 5,
            "maxLength": 500
        },
        "used": {
            "type": "boolean"
        },
        "sale": {
            "type":"boolean"
        },
        "blouse_size": {
            "type": "string",
            "minLength": 1,
            "maxLength": 5
        },
        "waist_size": {
            "type": "string",
            "minLength": 1,
            "maxLength": 5
        },
        "length": {
            "type": "string",
            "minLength": 1,
            "maxLength": 5
        }
    },

    "additionalProperties": false,
    "required": [
      "seller_username",
      "name",
      "material",
      "description",
      "price",
      "color",
      "quantity",
      "blouse_size",
      "waist_size",
      "length"
    ]
  }
  
